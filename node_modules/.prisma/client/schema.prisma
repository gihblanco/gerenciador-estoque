// Prisma schema gerado a partir das entidades Java em
// src/main/java/com/lipe/gerenciador_estoque/Entity
// Use a vari√°vel de ambiente DATABASE_URL para apontar para seu Postgres.

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id       Int       @id @default(autoincrement())
  nome     String
  email    String    @unique
  senha    String
  produtos Produto[]
}

model Produto {
  id                  Int     @id @default(autoincrement())
  nome                String
  quantidade          Int
  categoria           Int
  modelo              String?
  sistema_operacional String?
  processador         String?
  memoria_ram         String?
  armazenamento       String?
  preco               Float

  // coluna de relacionamento (mapeada para id_usuario conforme o JoinColumn no Java)
  usuario   Usuario? @relation(fields: [usuarioId], references: [id])
  usuarioId Int?     @map("id_usuario")
}
